<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= menu[0].name %> - 商品詳細ページ</title>
        <style>
            body {
                font-family: 'Comic Sans MS', 'Arial', sans-serif;
                background-color: #b3e0ff;
                margin: 0;
                padding: 0;
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            a {
                text-decoration: none;
                color: #333;
                font-size: 18px;
                margin-top: 10px;
            }

            .product-detail {
                max-width: 600px;
                margin: 20px auto;
                background-color: #fff;
                padding: 20px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                border-radius: 10px;
                text-align: center;
            }

            h2 {
                color: #0066cc;
            }

            p {
                color: #333;
                margin: 10px 0;
                font-size: 16px;
            }

            .product-image img {
                max-width: 100%;
                height: auto;
                border: 1px solid #ddd;
                border-radius: 5px;
            }

            .reviews {
                margin-top: 20px;
                text-align: left;
            }

            .reviews h3 {
                color: #0066cc;
            }

            select {
                margin-top: 10px;
                padding: 8px;
                font-size: 16px;
                background-color: #3399ff;
                color: #fff;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

            .reviews p {
                margin: 10px 0;
                font-size: 14px;
            }

            .reviews strong {
                color: #3399ff;
            }

            .cart-button {
                background-color: #e44d26;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
                margin-top: 20px;
            }

            .cart-button:hover {
                background-color: #ff6347;
            }
        </style>
    </head>
    <body>
        <a href="/cart">買い物カゴへ</a>
        <div class="product-detail">
            <div class="product-image">
                <img src="<%= menu[0].imagePath %>" alt="<%= menu[0].name %>">
            </div>
            <h2><%= menu[0].name %></h2>
            <p>価格: <%= menu[0].price %>円</p>
        </div>
        <div class="reviews">
            <button class="cart-button" onclick="addToCart()">買い物カゴへ入れる</button>
            <h3>レビュー一覧</h3>
            <select id="review-sort-select" onchange="sortReviews()">
                <option value="high">レビューの評価値高い順</option>
                <option value="low">レビューの評価値低い順</option>
            </select>
            <% if (reviews.length> 0) { %> <% reviews.forEach(review=> { %>
                    <p>
                    <strong><%= review.userid %></strong>さん: <%= review.content %>
                    (評価: <%= review.evaluation %> / 5)
                </p>
                    <% }); %>
                        <% } else { %>
                            <p>レビューはまだありません。</p>
                            <% } %>
        </div>
        <script>
            function sortReviews() {
                let select = document.getElementById("review-sort-select");
                let selectedValue = select.options[select.selectedIndex].value;

                let reviewsContainer = document.querySelector(".reviews");

                let reviews = document.querySelectorAll(".reviews p");

                let reviewsArray = Array.from(reviews);

                reviewsArray.sort(function (a, b) {
                    let aValue = parseInt(a.innerText.match(/\d+/)[0]);
                    let bValue = parseInt(b.innerText.match(/\d+/)[0]);

                    if (selectedValue === "high") {
                        return bValue - aValue;
                    } else {
                        return aValue - bValue;
                    }
                });

                reviewsArray.forEach(function (review) {
                    reviewsContainer.appendChild(review);
                });
            }

            function addToCart() {
                const menuJSON = `<%- JSON.stringify(menu[0], null, 2).replace(/'/g, '&quot;') %>`;
                console.log(menuJSON);
                const menu = JSON.parse(menuJSON.replace(/&quot;/g, '"'));
                console.log(menu);

                if (menu) {
                    const item = {
                        menu: {
                            imagePath: menu.imagePath,
                            name: menu.name,
                            price: menu.price,
                        },
                        id: menu.id,
                    };

                    fetch('/add-to-cart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(item),
                    })
                        .then(response => response.json())
                        .then(data => {
                            console.log('Success:', data);
                        })
                        .catch((error) => {
                            console.error('Error:', error);
                        });
                } else {
                    console.error('Menu information not available.');
                }

            }


            function updateCartDisplay() {
                const cartItemsElement = document.getElementById("cart-items");
                cartItemsElement.innerHTML = "";

                cartItems.forEach(item => {
                    const cartItemHTML = `
                <li>
                    <img src="${item.menu.imagePath}" alt="${item.menu.name}">
                    <p>${item.menu.name}</p>
                    <p>${item.menu.price}円</p>
                    <button onclick="removeFromCart(this)">削除</button>
                </li>
            `;
                    cartItemsElement.innerHTML += cartItemHTML;
                });
            }
        </script>
    </body>
</html>
