<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title>ECサイト</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        .product-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            margin-top: 20px;
        }

        .product-item {
            border: 1px solid #ddd;
            padding: 10px;
            width: calc(33.333% - 20px);
            text-align: center;
            background-color: #fff;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        .product-item img {
            max-width: 100%;
            height: auto;
            border-bottom: 1px solid #ddd;
            margin-bottom: 10px;
        }

        #sort-select {
            margin-top: 20px;
            padding: 10px;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <header>
        <h1>ECサイト</h1>
    </header>
    <div class="product-list">
        <% allMenu.forEach(product => { %>
            <div class="product-item">
                <a href="/edit/<%= product.id %>">
                    <h2><%= product.name %></h2>
                    </a>
                    <p>価格: <%= product.price %>円</p>
            </div>
        <% }); %>
    </div>
    <script type="text/javascript">
        let allMenu = JSON.parse('<%= JSON.stringify(allMenu) %>'.replace(/&#34;/g, '"'));
    </script>
</body>
</html>
