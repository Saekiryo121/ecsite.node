<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>買い物カゴ</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        #cart {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        h2 {
            color: #333;
        }

        #cart-items {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin-bottom: 20px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
        }

        img {
            max-width: 100px;
            height: auto;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        p {
            margin: 5px 0;
        }

        #totalPrice {
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }

        button {
            background-color: #e44d26;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div id="cart">
        <h2>買い物カゴ</h2>
        <ul id="cart-items">
            <% cartItems.forEach(item => { %>
                <li>
                    <div class="product-image">
                        <img src="<%= item.imagePath %>" alt="<%= item.name %>">
                    </div>
                    <div class="product-details">
                        <p><%= item.name %></p>
                        <p><%= item.price %>円</p>
                    </div>
                    <button onclick="removeFromCart(this, '<%= item.id %>')">削除</button>
                </li>
            <% }); %>
        </ul>
        <p>合計金額: <span id="totalPrice"><%= totalPrice %>円</span></p>
    </div>
    <script>
        function removeFromCart(button, itemId) {
            // TODO: カートから商品を削除する処理を実装
            console.log("Remove item with ID:", itemId);
        }

        function updateTotalPrice() {
            const cartItems = document.querySelectorAll("#cart-items li");
            let totalPrice = 0;

            cartItems.forEach(item => {
                const priceText = item.querySelector("p:nth-child(3)").textContent;
                const price = parseInt(priceText.replace(/[^0-9]/g, ""));
                totalPrice += price;
            });

            const totalPriceElement = document.getElementById("totalPrice");
            totalPriceElement.textContent = `${totalPrice}円`;
        }
    </script>
</body>
</html>
